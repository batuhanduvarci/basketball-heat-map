<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BasketballHeatMap" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ProgressBarStyle" parent="Widget.MaterialComponents.CircularProgressIndicator">
        <item name="android:indeterminate">true</item>
        <item name="indicatorColor">@color/purple_700</item>
    </style>

    <style name="TitleStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/text_size_20</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="CircularSeekBarStyle">
        <item name="cs_circle_style">butt</item>
        <item name="cs_max">100</item>
        <item name="cs_negative_enabled">false</item>
        <item name="cs_move_outside_circle">false</item>
        <item name="cs_circle_stroke_width">@dimen/dimen_20</item>
        <item name="cs_disable_pointer">true</item>
        <item name="cs_start_angle">270</item>
        <item name="cs_end_angle">270</item>
        <item name="cs_circle_fill">@color/white</item>
        <item name="cs_circle_color">@color/gray</item>
        <item name="cs_circle_progress_color">@color/purple_700</item>
    </style>
</resources>